<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/c_only_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_c_only_im"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bade" />

        <TextView
            android:id="@+id/tv_c_only_dec"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            android:maxLines="3"
            android:textColor="#3c3c3c"
            android:text="马尔克斯将毛姆列为最钟爱的作者之一。奥威尔称毛姆是“影响我最大的现代作家，我深深地钦佩他摒除虚饰讲述故事的能力”。短篇小说在毛姆的创作中占有重要地位，安东尼·伯吉斯就曾评价他写下了“英语文学中最好的短篇故事”。《人性的枷锁》《刀锋》等长篇小说使毛姆名闻世界，而他的短篇则以编织故事的精湛技巧，对人性和社会生活的敏锐洞察，为其赢得了更多读者，成为一种全球现象。"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_c_only_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱德华·巴纳德的堕落"
            android:textColor="#3c3c3c"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tv_c_all_dec"
            android:layout_alignStart="@+id/tv_c_all_dec" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


