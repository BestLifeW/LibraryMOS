<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/headbg" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civ_userhead"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="王田朝"
                android:textSize="16sp" />

            <com.rjxy.librarymos.view.CircleImageView
                android:id="@+id/civ_userhead"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/default_head_rect"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >
        <RelativeLayout
            android:id="@+id/rl_history"
            android:background="@drawable/setting_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_mall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_mall_icon"/>

            <TextView
                android:text="浏览记录"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_mall"
                android:layout_toEndOf="@+id/iv_mall" />

            <ImageView
                android:id="@+id/iv_mall2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/detail_icon_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

        </RelativeLayout>
    </LinearLayout>





        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:background="@drawable/setting_selector"
                android:id="@+id/rl_account_manager"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iv_account_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_setting_setting"/>

                <TextView
                    android:text="账号管理"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_account_icon"
                    android:layout_toEndOf="@+id/iv_account_icon" />

                <ImageView
                    android:id="@+id/iv_mall3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/detail_icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />

            </RelativeLayout>

            <View
                android:background="#f2f2f2"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_setting"
                android:background="@drawable/setting_selector"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iv_setting_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_setting_help"/>

                <TextView
                    android:text="设置"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_setting_icon"
                    android:layout_toEndOf="@+id/iv_setting_icon" />

                <ImageView
                    android:id="@+id/iv_mall4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/detail_icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />

            </RelativeLayout>
        </LinearLayout>

        <View

            android:background="#f2f2f2"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_exit"
            android:background="@drawable/setting_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:text="退出登录"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>