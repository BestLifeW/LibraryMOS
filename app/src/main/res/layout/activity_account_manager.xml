<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    >
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/setting_selector"
            android:id="@+id/rl_inforevise"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="信息修改"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_account_icon"
                android:layout_toEndOf="@+id/iv_account_icon" />

            <ImageView
                android:id="@+id/iv_mall3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/detail_icon_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

        </RelativeLayout>

        <View
            android:background="#f2f2f2"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_about"
            android:background="@drawable/setting_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_mall4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/detail_icon_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

            <TextView
                android:text="关于爱借书"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignBottom="@+id/iv_mall4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:id="@+id/textView5" />

        </RelativeLayout>
    </LinearLayout>

    <TextView

        android:text="退出登录"
        android:textColor="#ef2068"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/setting_selector"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/tv_loginout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>


